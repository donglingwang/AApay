<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    <ImageView 
        android:id="@+id/budget_item_img"
        android:layout_width="40dp"
        android:layout_height="38dp" 
        android:background="@drawable/budget_expand"/>
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView 
            android:id="@+id/budget_item_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="早午晚餐"/>
        <TextView 
            android:id="@+id/budget_item_consume_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2015-05-30"/>
    </LinearLayout>
	<TextView 
	    android:id="@+id/budget_item_view_money"
	    android:layout_width="wrap_content"
	    android:layout_height="match_parent"
	    android:layout_weight="1"
	    android:gravity="center_vertical"
	    android:text="80￥"/>
</LinearLayout>
