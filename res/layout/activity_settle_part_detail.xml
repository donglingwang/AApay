<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TextView 
        android:id="@+id/settle_detail_part_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="张三"/>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView 
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="消费次数："/>
        <TextView 
        android:id="@+id/settle_detail_consume_num"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:text="3"/>
    </LinearLayout>
	<LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView 
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="应付："/>
        <TextView 
        android:id="@+id/settle_detail_consume_money"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
		android:layout_marginLeft="15dp"
        android:text="30"/>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView 
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="已付："/>
        <TextView 
        android:id="@+id/settle_detail_consume_pay"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:text="30"/>
    </LinearLayout>
	<LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView 
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="结余："/>
        <TextView 
        android:id="@+id/settle_detail_consume_owe"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:text="0"/>
    </LinearLayout>
	 <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:text="消费明细"/>

	 <ListView
	     android:id="@+id/settle_lv_consume_detail"
	     android:layout_width="match_parent"
	     android:layout_height="0dp" 
	     android:layout_weight="1"/>

	 <LinearLayout 
	     android:layout_width="match_parent"
	     android:layout_height="wrap_content"
	     android:layout_marginBottom="10dp"
	     android:orientation="horizontal">
	     <TextView 
	         android:layout_width="0dp"
	         android:layout_height="match_parent"
	         android:layout_weight="1"/>
	     <Button 
	         android:id="@+id/settle_detail_send_msg"
	         android:layout_width="wrap_content"
	         android:layout_height="match_parent"
	         android:text="发送短信"/>
	     <Button 
	         android:id="@+id/settle_detail_confirm"
	         android:layout_width="wrap_content"
	         android:layout_height="match_parent"
	         android:layout_marginRight="20dp"
	         android:text="确定"/>
	 </LinearLayout>
</LinearLayout>
