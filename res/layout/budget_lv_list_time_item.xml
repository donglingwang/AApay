<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
         <TextView 
	        android:id="@+id/budget_item_week"
	        android:layout_width="50dp"
	        android:layout_height="match_parent"
	        android:text="03"/>
         <TextView 
	        android:id="@+id/budget_item_date"
	        android:layout_width="50dp"
	        android:layout_height="match_parent"
	        android:text="星期天"/>
    </LinearLayout>
   	<ImageView 
   	    android:id="@+id/budget_item_img"
   	    android:layout_width="40dp" 
   	    android:layout_height="40dp"
   	    android:background="@drawable/budget_expand"/>
	<TextView 
	        android:id="@+id/budget_item_category"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="3"
	        android:textSize="18sp"
	        android:layout_gravity="center_vertical"
	        android:text="早午晚餐【支出】"/>
      <TextView 
	      android:id="@+id/budget_item_money"
	      android:layout_width="wrap_content"
	      android:layout_height="wrap_content"
	      android:layout_weight="1"
	      android:layout_gravity="center_vertical"
	      android:textSize="18sp"
	      android:text="80￥"/>
</LinearLayout>
